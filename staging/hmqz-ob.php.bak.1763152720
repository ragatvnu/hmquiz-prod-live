$nonce = (function(){
  try { $b = random_bytes(12); } catch (\Throwable $e) { $b = uniqid('hmqz',true); }
  $t = rtrim(strtr(base64_encode($b),'+/','-_'),'=');
  return substr($t,0,22);
})();

